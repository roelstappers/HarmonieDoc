N[type=="ecflowtask"] { 
  
  if ($.script == "")  $.script=$.name;
  
  SCRDIR="./scr/";
  system("awk 'BEGIN{ORS=\"&#13;&#10;\"}{if (substr($1,0,1) == \"#\"){print($0);}else{exit;};}' " +  SCRDIR + $.script + " > /tmp/temp");

  int fd = openF("/tmp/temp","r");
  $.tooltip=readL(fd);
  closeF(fd);
} 
